@model Mahfil.ViewModels.MahfilFormViewModel

@{
    ViewBag.Title =Model.Heading;
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Mahfil"))
{
    <p class="alert alert-info">All Fields Are <strong>Required</strong></p>
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m=>m.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Venue)
        @Html.TextBoxFor(x => x.Venue, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Venue)
    </div>


    <div class="form-group">
        @Html.LabelFor(x => x.Date)
        @Html.TextBoxFor(x => x.Date, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Date)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Time)
        @Html.TextBoxFor(x => x.Time, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Time)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Genre)
        @Html.DropDownListFor(x => x.Genre, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Genre)
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
    {
    @Scripts.Render("~/bundles/jqueryval")
}
